{
  "name": "swap4energy",
  "version": "1.0.0",
  "private": true,
  "scripts": { 
    "clean": "rimraf dist",
    "css": "mkdir -p dist/assets && cleancss -o dist/assets/app.min.css src/css/app.css",
    "js":  "mkdir -p dist/assets && terser src/js/app.js -cm -o dist/assets/app.min.js",

    "copy": "mkdir -p dist && cpy index.html vars.html index.json Consolidados.xlsx Resultados/** .nojekyll dist --parents",

    "build": "npm-run-all clean css js copy"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "cpy-cli": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.10",
    "terser": "^5.31.0"
  }
}
